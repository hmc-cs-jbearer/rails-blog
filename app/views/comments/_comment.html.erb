<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">
      <% if comment.user == current_user %>
        You said:
      <% else %>
        <%= comment.user.email %> said:
      <% end %>
    </h3>
  </div>
  <div class="panel-body">
    <%= comment.body %>
  </div>
  <% if comment.user == current_user or comment.article.user == current_user %>
    <div class="panel-footer">
      <%= link_to 'Delete', [comment.article, comment], class: 'btn btn-default', method: :delete %>
    </div>
  <% end %>
</div>
